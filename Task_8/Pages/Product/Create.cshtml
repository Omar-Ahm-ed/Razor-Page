@page
@model Task_8.Pages.Product.CreateModel
@{
}
<form method="post">
   <div asp-validation-summary="All"> </div>
    <div class="form-group">
        <label asp-for="@Model.Product.Name">Name </label>
        <input type="text" asp-for="@Model.Product.Name" class="form-control" placeholder="Enter Name">
        <span asp-validation-for="@Model.Product.Name" class="text-danger"> </span>
    </div>
      <div class="form-group">
        <label asp-for="@Model.Product.Price">Price </label>
        <input type="text" asp-for="@Model.Product.Price" class="form-control" placeholder="Enter Price">
        <span asp-validation-for="@Model.Product.Price" class="text-danger"> </span>
    </div> 
    <div class="form-group">
        <label asp-for="Product.CategoryId" class="control-label">Category</label>
        <select asp-for="Product.CategoryId" class="form-control" asp-items="Model.CategoryList">
            <option value="">-- Select Category --</option>
                <option value="1">C1</option>
                <option value="2">C2</option>
        </select>
        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-page="Index" class="btn btn-secondary">Cencle</a>
</form>