@page "{id:int}"
@model Task_8.Pages.Product.UpdateModel
@{
}

<h2>Update Product</h2>

<form method="post">
    <input type="hidden" asp-for="Product.Id" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Product.Name">Name</label>
        <input asp-for="Product.Name" class="form-control" />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Price">Price</label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.CategoryId">Category ID</label>
        <input asp-for="Product.CategoryId" class="form-control" />
        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
